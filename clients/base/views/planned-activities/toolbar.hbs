<div class="control-group dashlet-options">
    <div class="row-fluid">
        {{#if settings.attributes.date}}
            <div class="btn-group dashlet-group" data-toggle="buttons-radio">
                <button class="btn{{#eq settings.attributes.date "today"}} active{{/eq}}" value="today" data-action="date-switcher" aria-pressed="{{#eq settings.attributes.date "today"}}true{{else}}false{{/eq}}">{{str "LBL_PLANNED_ACTIVITIES_DASHLET_TODAY_BUTTON_LABEL" this.module}}</button>
                <button class="btn{{#eq settings.attributes.date "future"}} active{{/eq}}" value="future" data-action="date-switcher" aria-pressed="{{#eq settings.attributes.date "future"}}true{{else}}false{{/eq}}">{{str "LBL_PLANNED_ACTIVITIES_DASHLET_FUTURE_BUTTON_LABEL" this.module}}</button>
            </div>
        {{/if}}
        {{#if settings.attributes.visibility}}
            <div class="btn-group dashlet-group pull-right" data-toggle="buttons-radio">
                <button class="btn{{#eq settings.attributes.visibility "user"}} active{{/eq}}" value="user" data-action="visibility-switcher" rel="tooltip" data-container="body" data-placement="bottom" title="{{str "LBL_PLANNED_ACTIVITIES_DASHLET_USER_BUTTON_LABEL" this.module}}" aria-label="{{str "LBL_PLANNED_ACTIVITIES_DASHLET_USER_BUTTON_LABEL" this.module}}" track="click:viewMyUserDashlet" aria-pressed="{{#eq settings.attributes.visibility "user"}}true{{else}}false{{/eq}}"><i class="fa fa-user"></i></button>
                <button class="btn{{#eq settings.attributes.visibility "group"}} active{{/eq}}" value="group" data-action="visibility-switcher" rel="tooltip" data-container="body" data-placement="bottom" title="{{str "LBL_PLANNED_ACTIVITIES_DASHLET_GROUP_BUTTON_LABEL" this.module}}" track="click:viewMyTeamsDashlet" aria-label="{{str "LBL_PLANNED_ACTIVITIES_DASHLET_GROUP_BUTTON_LABEL" this.module}}" aria-pressed="{{#eq settings.attributes.visibility "group"}}true{{else}}false{{/eq}}"><i class="fa fa-users"></i></button>
            </div>
        {{/if}}
    </div>
</div>
